<Window x:Class="MemoryGame.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:menu="clr-namespace:MemoryGame.Commands"
        xmlns:conv="clr-namespace:MemoryGame.Converters"
        xmlns:vm="clr-namespace:MemoryGame.ViewModels"
        Title="Sign In" Height="350" Width="450"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:LoginViewModel />
    </Window.DataContext>

    <Window.Resources>
        <conv:StringToImageSourceConverter x:Key="StringToImageSourceConverter"/>
    </Window.Resources>

    <Grid Margin="10">
        <!-- Structura pe 3 rânduri și 2 coloane -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Titlul / Mesajul de bun venit -->
        <TextBlock Text="Wellcome Enjoy this game!" 
                   FontSize="16" 
                   FontWeight="Bold"
                   Foreground="DarkRed"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"
                   Grid.Row="0" Grid.ColumnSpan="2"/>

        <!-- ListBox cu utilizatori -->
        <ListBox x:Name="UserList"
                 ItemsSource="{Binding Users}"
                 SelectedItem="{Binding SelectedUser}"
                 DisplayMemberPath="Name"
                 Width="120"
                 Grid.Row="1" Grid.Column="0" 
                 Margin="0,0,10,0" />

        <!-- Zona pentru afișarea avatarului (folosind un Canvas cu ImageBrush) -->
        <StackPanel Grid.Row="1" Grid.Column="1"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
            <Canvas Width="240" Height="218" Margin="0,0,0,10">
                <Canvas.Background>
                    <ImageBrush ImageSource="{Binding SelectedUser.ImagePath, Converter={StaticResource StringToImageSourceConverter}}"
                                Stretch="None"/>
                </Canvas.Background>
            </Canvas>
            <!-- Aici pot fi adăugate butoane suplimentare pentru navigarea imaginilor, dacă este necesar -->
        </StackPanel>

        <!-- Butoanele de jos -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">
            <Button Content="New User"
                    Command="{x:Static menu:MenuCommands.NewUserCommand}"
                    CommandParameter="{Binding}"
                    Width="80" Margin="5,0"/>
            <Button Content="Delete User"
                    Command="{x:Static menu:MenuCommands.DeleteUserCommand}"
                    CommandParameter="{Binding SelectedUser}"
                    Width="80" Margin="5,0"/>
            <Button Content="Play"
                    Command="{x:Static menu:MenuCommands.PlayCommand}"
                    CommandParameter="{Binding SelectedUser}"
                    Width="80" Margin="5,0"/>
            <Button Content="Cancel"
                    Command="{x:Static menu:MenuCommands.CancelCommand}"
                    Width="80" Margin="5,0"/>
        </StackPanel>
    </Grid>
</Window>
